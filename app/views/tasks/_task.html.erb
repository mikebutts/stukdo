<div class="sticky taped" >
  <div>
  <%= link_to edit_task_path(task) do %>
  created <%= time_ago_in_words(task.created_at) %> ago
  <% end %>
  <%= link_to "x", task_path(task), method: :delete, data: {confirm: "Are you sure?"}, class: "pull-right" %>

  </div>

 <div><%= raw(task.content_html) %></div>

  <div >
   


    <% if task.state == "doing" %>
    <div>
    <%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_task_path(task, state: "to_do"), method: :put, class: "btn" %>
    <%= link_to "<i class='fa fa-arrow-right'></i>".html_safe, change_task_path(task, state: "done"), method: :put, class: "btn" %>
    </div>
    <% elsif task.state == "done" %>
    <%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn" %>
    <% else %>
    <%= link_to "<i class='fa fa-arrow-right'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn" %>
    <% end %>
  </div>
</div>

